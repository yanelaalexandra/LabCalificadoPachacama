<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondotodos"
    android:foreground="?android:attr/selectableItemBackground"
    >

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/fondo2"
    app:cardCornerRadius="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo2"

        >



        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"

            android:padding="7dp">

            <TableRow>


                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Name"/>



            </TableRow>

        </TableLayout>



        <TableLayout
            android:id="@+id/table3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table"
            android:padding="7dp"
            >

            <TableRow>


                <TextView
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="Info"/>

            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/table4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table3"
            android:padding="7dp"
            >

            <TableRow>


                <ImageButton
                    android:id="@+id/phonecall"
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@android:drawable/ic_menu_call"
                android:backgroundTint="@color/colorPrimary"
                android:onClick="call"/>

                <ImageButton
                    android:id="@+id/url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:background="@android:drawable/ic_menu_agenda"
                    android:backgroundTint="@color/colorPrimary"
                    android:onClick="openWebsite"/>

                <ImageButton
                    android:id="@+id/sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:background="@android:drawable/btn_star"
                    android:backgroundTint="@color/colorPrimary"
                    android:onClick="smgMessage"/>

                <ImageButton
                    android:id="@+id/correo"
                    android:layout_width="81dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:background="@android:drawable/ic_dialog_email"
                    android:backgroundTint="@color/colorPrimary"
                    android:onClick="correo" />

                <ImageButton
                    android:id="@+id/compartir"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:background="@android:drawable/ic_dialog_dialer"
                    android:backgroundTint="@color/colorPrimary"
                    android:onClick="compartir"/>




            </TableRow>


        </TableLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>


</RelativeLayout>